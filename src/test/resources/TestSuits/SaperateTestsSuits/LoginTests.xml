<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="LoginTestsSuit" verbose="1" >

    <test name="PositiveLoginTests" >
        <parameter name="browser"  value="Chrome"/>
        <groups>
            <run>
                <include name="positiveTests"></include>
            </run>
        </groups>
        <classes>
            <class name="com.herokuapp.theinternet.LoginTests" />
        </classes>
    </test>

    <test name="NegativeUserNameTests">
        <parameter name="browser"  value="chrome"/>
        <parameter name="username"  value="incorrecttomsmith"/>
        <parameter name="password"  value="SuperSecretPassword!"/>
        <parameter name="expectedmsg"  value="Your username is invalid!"/>
        <classes>
            <class name="com.herokuapp.theinternet.LoginTests">
                <methods>
                    <include name="NegativeLoginTests"></include>
                </methods>
            </class>
        </classes>
    </test>

   <test name="NegativePasswordTests">
        <parameter name="browser"  value="firefox"/>
        <parameter name="username"  value="tomsmith"/>
        <parameter name="password"  value="incorrectSuperSecretPassword!"/>
        <parameter name="expectedmsg"  value="Your password is invalid!"/>
        <classes>
            <class name="com.herokuapp.theinternet.LoginTests">
                <methods>
                    <include name="NegativeLoginTests"></include>
                </methods>
            </class>
        </classes>
    </test>
</suite>


